{
  "family": "nara-backend",
  "taskRoleArn": "arn:aws:iam::897722672231:role/ecsTaskRole",
  "executionRoleArn": "arn:aws:iam::897722672231:role/ecsTaskExecutionRole",
  "networkMode": "bridge",
  "containerDefinitions": [
    {
      "name": "nara-backend",
      "image": "897722672231.dkr.ecr.us-east-2.amazonaws.com/nara-backend:latest",
      "cpu": 1024,
      "memory": 2048,
      "memoryReservation": 1024,
      "portMappings": [
        {
          "containerPort": 32768,
          "hostPort": 32768,
          "protocol": "tcp"
        }
      ],
      "essential": true,
      "command": [
        "/bin/bash",
        "-c",
        "python manage.py migrate --noinput && python manage.py collectstatic --noinput && gunicorn config.wsgi:application --bind 0.0.0.0:32768 --workers 3 --threads 3 --timeout 120"
      ],
      "environment": [
        {
          "name": "DJANGO_SETTINGS_MODULE",
          "value": "config.settings.production"
        },
        {
          "name": "DJANGO_DEBUG",
          "value": "false"
        },
        {
          "name": "PYTHONUNBUFFERED",
          "value": "1"
        },
        {
          "name": "DATABASE_URL",
          "value": "sqlite:////app/nara_backend/db.sqlite3"
        },
        {
          "name": "ALLOWED_HOSTS",
          "value": "*"
        }
      ],
      "ulimits": [
        {
          "name": "nofile",
          "softLimit": 65536,
          "hardLimit": 65536
        }
      ],
      "logConfiguration": {
        "logDriver": "awslogs",
        "options": {
          "awslogs-group": "/ecs/nara-backend",
          "awslogs-create-group": "true",
          "awslogs-region": "us-east-2",
          "awslogs-stream-prefix": "ecs"
        }
      },
      "healthCheck": {
        "command": [
          "CMD-SHELL",
          "/bin/bash -c \"python manage.py check --database default && curl -f http://localhost:32768/health || exit 1\""
        ],
        "interval": 60,
        "timeout": 10,
        "retries": 3,
        "startPeriod": 120
      }
    }
  ],
  "requiresCompatibilities": [
    "EC2"
  ],
  "cpu": "1024",
  "memory": "4096"
} 